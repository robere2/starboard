{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://starboard.ecr.dev/schemas/hypixel/resources/vanity/companions.json",
  "title": "HypixelCompanionsResponse",
  "description": "Schema for data returned from https://api.hypixel.net/resources/vanity/companions",
  "oneOf": [
    {
      "type": "object",
      "properties": {
        "success": {
          "const": true
        },
        "lastUpdated": {
          "type": "integer"
        },
        "types": {
          "items": {
            "$ref": "#/definitions/HypixelCompanion"
          },
          "type": "array"
        },
        "rarities": {
          "items": {
            "$ref": "#/definitions/HypixelCompanionRarity"
          },
          "type": "array"
        }
      },
      "required": [
        "success",
        "types",
        "rarities"
      ]
    },
    {
      "type": "object",
      "properties": {
        "success": {
          "const": false
        },
        "cause": {
          "type": "string"
        },
        "throttle": {
          "type": "boolean"
        },
        "global": {
          "type": "boolean"
        }
      },
      "required": [
        "success",
        "cause"
      ]
    }
  ],
  "definitions": {
    "HypixelCompanion": {
      "properties": {
        "key": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "package": {
          "type": "string"
        },
        "rarity": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "type": "object"
    },
    "HypixelCompanionRarity": {
      "properties": {
        "color": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "type": "object"
    }
  }
}