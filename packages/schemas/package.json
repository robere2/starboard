{
  "name": "@mcsb/schemas",
  "version": "1.0.0-pre.24",
  "description": "Self-generative JSON schemas for the Hypixel API",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "tsc && eslint .",
    "typedoc": "npm run build && typedoc --tsconfig tsconfig.typedoc.json",
    "generate": "node --enable-source-maps --no-warnings=ExperimentalWarning --loader ts-node/esm src/generate.ts",
    "prebuild": "rimraf dist",
    "build": "node --enable-source-maps --no-warnings=ExperimentalWarning --loader ts-node/esm src/build.ts",
    "prepublishOnly": "lerna run build --scope @mcsb/schemas"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@types/json-diff": "^1.0.1",
    "ajv": "^8.12.0",
    "dotenv": "^16.3.1",
    "eslint-config-custom": "*",
    "gen-json-schema": "^0.2.6",
    "json-diff": "^1.0.6",
    "json-schema-to-typescript": "^13.1.1",
    "rollup": "^4.1.4",
    "tsconfig": "*"
  },
  "nx": {
    "targets": {
      "build": {
        "inputs": [
          "{projectRoot}/src/schemas/**/*.json"
        ],
        "outputs": [
          "{projectRoot}/dist/**/*"
        ]
      }
    }
  }
}
