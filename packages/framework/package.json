{
  "name": "@mcsb/framework",
  "version": "1.0.0-alpha1",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    "import": "./dist/index.js",
    "require": "./dist/index.cjs"
  },
  "license": "MIT",
  "scripts": {
    "lint": "eslint . && madge --circular src",
    "test": "node --inspect test --coverage",
    "test:watch": "npx nodemon -L --ext \"ts,json\" --exec \"tsc && node test\"",
    "prebuild": "rimraf dist",
    "build": "rollup --config rollup.config.ts --configPlugin typescript",
    "postbuild": "rimraf -g dist/rollup.config.* dist/src"
  },
  "dependencies": {
    "@mcsb/api": "*",
    "url-join": "^5.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.5",
    "eslint-config-custom": "^1.0.0-alpha1",
    "rollup": "^4.1.4",
    "tsconfig": "^1.0.0-alpha1",
    "typescript": "^5.0.0"
  },
  "watcherOptions": {
    "files": [
      "src",
      "index.ts",
      "rollup.config.ts",
      "package.json",
      "tsconfig.json"
    ]
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
