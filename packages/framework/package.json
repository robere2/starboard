{
  "name": "@mcsb/framework",
  "version": "0.0.0",
  "main": "dist/src/index.js",
  "types": "dist/src/index.js",
  "license": "MIT",
  "scripts": {
    "lint": "eslint . && madge --circular src",
    "test": "bun --inspect test --coverage",
    "test:watch": "bun x nodemon -L --ext \"ts,json\" --exec \"tsc && bun test\"",
    "dev": "bun x nodemon -L --ext \"ts,json\" --watch ./src --watch ../api/dist/*.js --exec \"tsc && bun run build\" --delay 3",
    "build": "esbuild `find src \\\\( -name '*.ts' \\\\)` --packages=external --outdir=dist/src --platform=node --sourcemap=external",
    "types": "tsc --build && echo \"Types built\""
  },
  "dependencies": {
    "@mcsb/api": "*"
  },
  "devDependencies": {
    "bun-types": "^1.0.6",
    "eslint-config-custom": "*",
    "tsconfig": "*",
    "typescript": "^5.0.0"
  }
}
