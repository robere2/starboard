{
  "$schema": "node_modules/nx/schemas/nx-schema.json",
  "tasksRunnerOptions": {
    "default": {
      "options": {
        "cacheableOperations": [
          "build", "lint", "test"
        ]
      }
    }
  },
  "namedInputs": {
    "all": ["{projectRoot}/**/*"],
    "production": ["all", "!{projectRoot}/dist/**/*", "!{projectRoot}/**/*.test.ts", "runtime"],
    "dist": ["{projectRoot}/dist/**/*"],
    "tests": ["{projectRoot}/**/*.test.ts"],
    "runtime": [{"runtime": "node -v"}]
  },
  "targetDefaults": {
    "lint": {
      "inputs": ["all", "!{projectRoot}/dist/**/*"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^dist"]
    },
    "test:watch": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^dist"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production"],
      "outputs": ["{projectRoot}/dist"]
    }
  }
}
